@import 'stylus/variables'
color--delta = rgb(16, 16, 16, 1)
clearfix()
  *zoom 1
  &:before, &:after
    display table
    line-height 0
    content ""
  &:after
    clear both
.clearfix
  clearfix()

btn(color)
	background warning-color
	padding 15px
	border 0
	outline 0
	width 350px
	text-transform uppercase
	font-size 14px
	letter-spacing 1.2px
	font-weight 700
	&:hover
		transition all ease-in 0.3s
		background (color + color--delta)
	&:active
		transition all ease-in 0.2s
		background (color - color--delta)